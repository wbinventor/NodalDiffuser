

class NEMBasis:

    def __init__(self):


    ############################################################################
    #############################  NEM Basis Functions #########################
    ############################################################################
        
    def P0(self, xi):
        return 1.


    def P1(self, xi):
        return 2. * xi - 1.


    def P2(self, xi):
        return 6. * xi * (1. - xi) - 1.

    
    def P3(self, xi):
        return 6. * xi * (1. - xi) * (2. * xi - 1.)


    def P4(self, xi):
        return 6. * xi * (1. - xi) * (5. * xi**2 - 5. * xi + 1.)


    ############################################################################
    ###################  FIRST DERIVATIVES OF NEM BASIS FUNCTIONS  #############
    ############################################################################
